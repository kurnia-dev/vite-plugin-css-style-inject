{
  "name": "vite-plugin-style-inject",
  "version": "1.0.0",
  "description": "A Vite plugin designed to inject CSS directly into JavaScript files, preventing the generation of separate CSS files. This is particularly useful for packaging libraries with minimal styles, ensuring users donâ€™t need to import an additional CSS file manually.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "typings": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && sh ./cjs-esm-fixup.sh",
    "format": "prettier --write **.{ts,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurnia-dev/vite-plugin-style-inject.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "plugin",
    "typescript",
    "css-style-inject",
    "single-js-file",
    "css",
    "js"
  ],
  "peerDependencies": {
    "vite": ">2.0.0-0"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "vite": "^4.5.0"
  },
  "author": "Marco Prontera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kurnia-dev/vite-plugin-style-inject/issues"
  },
  "homepage": "https://github.com/kurnia-dev/vite-plugin-style-inject#readme"
}
